.chat-side
  .side-header
    .side-header__box
      %p.side-header__box__user-name 
        = current_user.name
      %ul.side-header__box__menu
        %li.side-header__box__menu__new-group
        = link_to new_group_path do
          = fa_icon 'edit', class: "side-header__box__menu__btn--icon"
        %li.side-header__box__menu__edit-user
        = link_to edit_user_path(current_user) do
          = fa_icon 'cog', class: 'icon'
        
  .groups
    .group
      - current_user.groups.each do |group|
        = link_to '#' do
          .group__name
            = group.name
          .group__message
            メッセージはまだありません。
.chat-main
  .main-header
    .main-header__left-box
      %h2.main-header__left-box__current-group
        nekoの集い
      %ul.main-header__left-box__member-list
        Member：
        %li.main-header__left-box__member-list__member
          nekoneko
    =link_to "" do
      .main-header__edit-btn
        Edit
  .messages
    .message
      .message__upper-info
        .message__upper-info__talker
          nekoneko
        .message__upper-info__date
          2019/09/11(Wed) 12:05:41
      .message__text
        にゃー
  .form
    %form.new_message
      .input-box
        %input.input-box__text{ placeholder: "type a message", type: "text"}
        %label.input-box__image
          %input.input-box__image__file{ type: "file"}
          = fa_icon 'image', class: "icon-image"
      %input.submit-btn{name: "commit", type: "submit", value: "Send"}/